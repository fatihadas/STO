@model STO.Data.Model.Urun

@{
    ViewBag.Title = "Goster";
    Layout = "~/Views/layouts/dashboard_layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Ürün Göster
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Genel/Durum"><i class="fa fa-dashboard"></i> Genel Durum</a></li>
        <li><a href="/Urun/Liste">Ürün İşlemleri</a></li>
        <li class="active">Ürün Göster</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Ürün</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">



            <div>
                <h3>@*Urun*@</h3>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.UrunAdi)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UrunAdi)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.UrunBarkod)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UrunBarkod)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.UrunFiyat)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UrunFiyat)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.UrunAciklama)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UrunAciklama)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.UrunAdet)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UrunAdet)
                    </dd>
                </dl>
            </div>
            <p>
                @Html.ActionLink("Düzenle", "Duzenle", new { id = Model.Id }) |
                @Html.ActionLink("Listeye Dön", "Liste")
            </p>



        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->


