@model IEnumerable<STO.Data.Model.Musteri>

@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/layouts/dashboard_layout.cshtml";
    STO.Data.Context.SiparisContext db = new STO.Data.Context.SiparisContext();
}

<!-- Content Header (Page header) -->
<section class="content-header">


    <h1>
        Müşteri Listesi
        @*<small>it all starts here</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Genel/Durum"><i class="fa fa-dashboard"></i> Genel Durum</a></li>
        <li class="active"><a href="/Musteri/Liste">Müşteri İşlemleri</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Müşteriler</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">




            <p>
                @Html.ActionLink("Yeni Müşteri", "Yeni")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MusteriAdiSoyadi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MusteriTel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MusteriAdres)
                    </th>
                    <th>
                        Müşteri Şehir
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MusteriAdiSoyadi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MusteriTel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MusteriAdres)
                        </td>
                        <td>
                            @( db.Sehirs.Find(item.MusteriSehirId).SehirAdi.ToString() )
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.ActionLink("Düzenle", "Duzenle", new { id = item.Id }) |
                            @Html.ActionLink("Göster", "Goster", new { id = item.Id }) |
                            @Html.ActionLink("Sil", "Sil", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>




        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->


