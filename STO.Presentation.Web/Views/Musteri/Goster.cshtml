@model STO.Data.Model.Musteri

@{
    ViewBag.Title = "Goster";
    Layout = "~/Views/layouts/dashboard_layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Müşteri Göster
        @*<small>it all starts here</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Genel/Durum"><i class="fa fa-dashboard"></i> Genel Durum</a></li>
        <li><a href="/Musteri/Liste">Müşteri İşlemleri</a></li>
        <li class="active">Müşteri Göster</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Müşteri</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">


            <div>
                @*<h4>Musteri</h4>*@
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.MusteriAdiSoyadi)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MusteriAdiSoyadi)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MusteriTel)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MusteriTel)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MusteriAdres)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MusteriAdres)
                    </dd>

                    <dt>
                        Müşteri Şehir
                    </dt>

                    <dd>
                        @( new STO.Data.Context.SiparisContext().Sehirs.Find(Model.MusteriSehirId).SehirAdi.ToString() )
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Username)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Username)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Password)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Password)
                    </dd>

                </dl>
            </div>
            <p>
                @Html.ActionLink("Düzenle", "Duzenle", new { id = Model.Id }) |
                @Html.ActionLink("Listeye Dön", "Liste")
            </p>


        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->


