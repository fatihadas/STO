
@{
    ViewBag.Title = "Hata";
    Layout = "~/Views/layouts/dashboard_layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        500 Error Page
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Genel/Durum"><i class="fa fa-dashboard"></i> Genel Durum</a></li>
        <li class="active">500 error</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">500</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">


            <div class="error-page">
                <h2 class="headline text-red">500</h2>
                <div class="error-content">
                    <h3><i class="fa fa-warning text-red"></i> Oops! Bir şeyler yanlış gitti.</h3>
                    <p>
                        <br />
                        @TempData["Error"]
                        <br /><br />
                        Ana sayfaya dönmek için <a href="/Genel/Durum">tıklayın</a>

                    </p>
                </div>
            </div>




        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->


