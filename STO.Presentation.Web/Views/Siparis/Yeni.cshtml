@model STO.Presentation.Web.Models.SiparisYeni

@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/layouts/dashboard_layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Yeni Sipariş Ekle
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Genel/Durum"><i class="fa fa-dashboard"></i> Genel Durum</a></li>
        <li><a href="/Siparis/Liste">Sipariş İşlemleri</a></li>
        <li class="active">Yeni Sipariş İşlemi</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Sipariş</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @*<h4>Sipari</h4>*@
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Siparis.UrunId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Siparis.UrunId, Model.urunListItem, new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.Siparis.UrunId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Siparis.MusteriId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Siparis.MusteriId, Model.musteriListItem, new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.Siparis.MusteriId, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Siparis.SiparisAdet, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Siparis.SiparisAdet, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Siparis.SiparisAdet, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Siparis.SiparisDurum, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Siparis.SiparisDurum, Model.siparisDurumListItem, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Siparis.SiparisDurum, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Kaydet" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Listeye Dön", "Liste")
            </div>


        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->


