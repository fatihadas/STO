@model STO.Data.Model.Sipari

@{
    ViewBag.Title = "Goster";
    Layout = "~/Views/layouts/dashboard_layout.cshtml";
    STO.Data.Context.SiparisContext db = new STO.Data.Context.SiparisContext();
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Sipariş Göster
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Genel/Durum"><i class="fa fa-dashboard"></i> Genel Durum</a></li>
        <li><a href="/Siparis/Liste">Sipariş İşlemleri</a></li>
        <li class="active">Sipariş Göster</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Sipariş</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">



            <div>
                @*<h4>Sipariş</h4>*@
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @*@Html.DisplayNameFor(model => model.SiparisTarihi)*@
                        ÜrünAdı
                    </dt>
                    <dd>
                        @*@Html.DisplayFor(model => model.Urun.Id)*@
                        @db.Uruns.Find(Model.UrunId).UrunAdi.ToString()
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Musteri.MusteriAdiSoyadi)
                    </dt>
                    <dd>
                        @*@Html.DisplayFor(model => model.SiparisTarihi)*@
                        @db.Musteris.Find(Model.MusteriId).MusteriAdiSoyadi.ToString()
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SiparisAdet)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SiparisAdet)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.EklenmeTarihi)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.EklenmeTarihi)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.SiparisTarihi)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SiparisTarihi)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SiparisDurum)
                    </dt>
                    <dd>
                        @*@Html.DisplayFor(model => model.EklenmeTarihi)*@
                        @db.SiparisDurums.Find(Model.SiparisDurum).Durum.ToString()

                    </dd>


                </dl>
            </div>
            <p>
                @Html.ActionLink("Düzenle", "Duzenle", new { id = Model.SiparisId }) |
                @Html.ActionLink("Listeye Dön", "Liste")
            </p>



        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->


