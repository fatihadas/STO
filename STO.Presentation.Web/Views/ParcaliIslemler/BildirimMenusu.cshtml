@model List<STO.Data.Model.Sipari>

@{
    //ViewBag.Title = "BildirimMenusu";
    //Layout = "~/Views/layouts/dashboard_layout.cshtml";
    STO.Data.Context.SiparisContext db = new STO.Data.Context.SiparisContext();
    //@(db.Musteris.Find(item.MusteriId).MusteriAdiSoyadi.ToString())
    //@(db.Uruns.Find(item.UrunId).UrunAdi.ToString())
    //@item.Musteri.MusteriAdiSoyadi
    //@item.Urun.UrunAdi
}
<li class="dropdown notifications-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bell-o"></i>
        <span class="label label-warning">@Model.Count</span>
    </a>
    <ul class="dropdown-menu">
        <li class="header">Bildirimler</li>
        <li>
            <!-- inner menu: contains the actual data -->
            <ul class="menu">
                @*@item.Musteri.MusteriAdiSoyadi - @item.Urun.UrunAdi*@
                @foreach (var item in Model)
                {
                    <li>
                        <a href="/Siparis/Duzenle/@item.SiparisId">
                            @(db.Musteris.Find(item.MusteriId).MusteriAdiSoyadi.ToString())
                            -
                            @(db.Uruns.Find(item.UrunId).UrunAdi.ToString())
                            ürününü bekliyor
                        </a>
                    </li>
                }
            </ul>
        </li>
        <li class="footer text-center">
            @if (Model.Count > 0)
            {
                <span>Bildirimleriniz</span>
            }
            else
            {
                <span>Hiç bildirim yok</span>
            }
        </li>
    </ul>
</li>


